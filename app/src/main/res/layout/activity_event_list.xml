<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.tees.t7191599.agile_ica_0001.EventListActivity"
    android:background="@drawable/space_background_1"
    >

    <ImageView
        android:id="@+id/CreateEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="CreateEvent"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ListView
        android:id="@+id/eventListView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="@color/cardview_light_background"
        android:cacheColorHint="@color/cardview_light_background"
        android:divider="@color/cardview_light_background"
        android:dividerHeight="1dip"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#8dd9de"
        android:scrollbars="horizontal|vertical" />
</GridLayout>
