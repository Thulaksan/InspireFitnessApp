<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/faded"
    tools:context="uk.ac.tees.t7191599.agile_ica_0001.UserProfile">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        app:srcCompat="@drawable/userpicture" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:fontFamily="casual"
        android:text="User Profile"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/textviewEmail"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:hint="Name"
        android:textAlignment="center"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewHight"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_below="@+id/textViewDOB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:fontFamily="casual"
        android:hint="Hight"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewDOB"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_below="@+id/textviewEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:fontFamily="casual"
        android:hint="Date of Birth"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textviewEmail"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_below="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:fontFamily="casual"
        android:hint="Email"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_below="@+id/textViewHight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:fontFamily="casual"
        android:hint="Weight"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="24sp" />

    <Button
        android:id="@+id/etProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/common_google_signin_btn_text_dark_normal_background"
        android:text="Edit Profile" />
</RelativeLayout>
