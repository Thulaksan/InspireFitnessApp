<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_background_1"
    tools:context="uk.ac.tees.t7191599.agile_ica_0001.First_loginActivity">

    <ImageView
        android:id="@+id/propic"
        android:layout_width="150dip"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:contentDescription="logo"
        app:srcCompat="@drawable/propic" />

    <EditText
        android:id="@+id/et_First_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:background="#1000"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/cardview_light_background"
        android:hint="First Name"
        android:textSize="24dip"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_Second_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_First_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:background="#1000"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/cardview_light_background"
        android:hint="Second Name"
        android:textSize="24dip"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/et_DoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Second_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:background="#1000"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/cardview_light_background"
        android:hint="Date Of Birth"
        android:textSize="24dip"
        />

    <EditText
        android:id="@+id/et_Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_DoB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:background="#1000"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/cardview_light_background"
        android:hint="Height"
        android:textSize="24dip"
        android:inputType="number" />
    <EditText
        android:id="@+id/et_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:background="#1000"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/cardview_light_background"
        android:hint="Weight"
        android:textSize="24dip"
        android:inputType="number" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/propic"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#1000"
        android:ems="10"
        android:hint="Weight"
        android:text="Click Image to Add Profile Picture"

        android:textColor="@android:color/background_light"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="15dp"
        tools:text="Click Image to Add Profile Picture" />

    <android.support.v7.widget.CardView
        android:id="@+id/Final_Card"
        android:layout_width="300dip"
        android:layout_height="50dip"
        android:layout_alignEnd="@+id/et_Weight"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/et_Weight"
        android:layout_marginTop="25dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        android:onClick="FinalLogin">

        <RelativeLayout
            android:id="@+id/on"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="FinalLogin">

            <TextView
                android:id="@+id/FinalSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sign Up"
                android:textColor="@color/cardview_light_background"
                android:textSize="24dip"
                android:onClick="FinalLogin"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>
